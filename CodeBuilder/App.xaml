<Application x:Class="CodeBuilder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Window1.xaml">
	<Application.Resources>
		<Style x:Key="TextBoxStyle" TargetType="TextBox">
			<Setter Property="Height" Value="28"></Setter>
			<Setter Property="VerticalContentAlignment" Value="Center"></Setter>
		</Style>
		<Style x:Key="ReadOnlyTxtStyle" TargetType="TextBox">
			<Setter Property="Background" Value="LightYellow">
			</Setter>
			<Setter Property="IsReadOnly" Value="True">
			</Setter>
		</Style>
		<Style x:Key="MemoReadOnlyStyle" TargetType="TextBox" BasedOn="{StaticResource ReadOnlyTxtStyle}">
			<Setter	Property="FontFamily" Value="Courier New"></Setter>
		</Style>
		<Style x:Key="ButtonStyle" TargetType="Button">
			<Setter Property="Height" Value="30"></Setter>
			<Setter Property="Margin" Value="2, 5, 2, 5"></Setter>
		</Style>
		<Style x:Key="ButtonStyleTiny" TargetType="Button">
			<Setter Property="Margin" Value="0,0,5,0"></Setter>
			<Setter Property="Width" Value="55"></Setter>
		</Style>
	</Application.Resources>
</Application>